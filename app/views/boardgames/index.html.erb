<%= form_tag(user_boardgames_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Boardgames" %>
  <%= submit_tag "Search" %>
<% end %>

<% if @current_users_games %>
  <h2>My Boardgames</h2>
  <%= link_to "Add a Boardgame", new_user_boardgame_path(@user.id) %>
  <ul>
    <% @current_users_games.each do |game| %>
    <li><%= link_to(game.name, user_boardgame_path(@user.id, game.id)) %> - <%= link_to('Edit', edit_user_boardgame_path(@user.id, game.id)) %> | <%= link_to('Delete', user_boardgame_path(@user.id, game.id), method: 'delete') %></li>
    <li><%= image_tag(game.image) %></li>
    <% end %>
  </ul>
<% end %>
<br>

<h2>Friend's Boardgames</h2>
<ul>
  <% @friends_games.each do |game| %>
    <li><%= link_to(game.name, user_boardgame_path(game.owner_id, game.id)) %></li>
    <li><%= image_tag(game.image) %></li>
    <li>Owned by <%= game.owner.username %></li>
  <% end %>
</ul>
